{
  "name": "app",
  "version": "1.0.0",
  "private": true,
  "description": "A new app created with all-day-long.",
  "main": "../core/main.js",
  "author": "",
  "scripts": {
    "build": "esbuild src/index.js --bundle --outfile=public/bundle.js --jsx=automatic --loader:.js=jsx",
    "start": "electron .",
    "dev": "npm run build && npm run start",
    "package": "npm run build && electron-builder"
  },
  "dependencies": {
    "all-day-long-core": "1.0.0",
    "react": "19.1.1",
    "react-dom": "19.1.1"
  },
  "devDependencies": {
    "esbuild": "^0.25.8"
  },
  "build": {
    "appId": "com.example.newapp",
    "productName": "New LongDay App",
    "extraMetadata": {
      "main": "core/main.js"
    },
    "directories": {
      "buildResources": "assets",
      "output": "../../dist"
    },
    "files": [
      "**/*",
      "!node_modules/*",
      {
        "from": "node_modules/all-day-long-core",
        "to": "core"
      }
    ],
    "win": { "icon": "assets/icon.ico" },
    "mac": { "icon": "assets/icon.icns" },
    "linux": { "icon": "assets/icon.png" }
  }
}