{
  "name": "app",
  "version": "1.0.0",
  "private": true,
  "description": "The application part of the all-day-long-project project.",
  "main": "main.js",
  "author": "Xzdes",
  "scripts": {
    "build:ui": "esbuild src/index.js --bundle --outfile=public/bundle.js --jsx=automatic --loader:.js=jsx",
    "build:workers": "node esbuild.workers.js",
    "build": "npm run build:ui && npm run build:workers",
    "watch:ui": "esbuild src/index.js --bundle --outfile=public/bundle.js --jsx=automatic --loader:.js=jsx --watch",
    "watch": "npm-watch",
    "start": "electron .",
    "dev": "npm run build && npm run start",
    "package": "npm run build && electron-builder --config electron-builder.config.js"
  },
  "dependencies": {
    "all-day-long-core": "file:../core",
    "dayjs": "1.11.12",
    "react": "19.1.1",
    "react-dom": "19.1.1",
    "react-router-dom": "7.8.0"
  },
  "devDependencies": {
    "esbuild": "0.25.8",
    "npm-watch": "^0.13.0"
  },
  "watch": {
    "build:workers": {
      "patterns": [
        "server/workers"
      ],
      "extensions": "js",
      "quiet": false
    }
  }
}