{
  "name": "app",
  "version": "1.0.0",
  "private": true,
  "description": "The application part of the all-day-long-project project.",
  "main": "../core/main.js",
  "author": "Xzdes",
  "scripts": {
    "build": "esbuild src/index.js --bundle --outfile=public/bundle.js --jsx=automatic --loader:.js=jsx",
    "watch": "esbuild src/index.js --bundle --outfile=public/bundle.js --jsx=automatic --loader:.js=jsx --watch",
    "start": "electron .",
    "dev": "npm run build && npm run start",
    "package": "npm run build && electron-builder"
  },
  "dependencies": {
    "all-day-long-core": "file:../core",
    "dayjs": "1.11.12",
    "react": "19.1.1",
    "react-dom": "19.1.1",
    "react-router-dom": "7.8.0"
  },
  "devDependencies": {
    "esbuild": "0.25.8"
  },
  "build": {
    "appId": "com.mycompany.alldaylongapp",
    "productName": "Мое первое All-Day-Long приложение",
    "extraMetadata": {
      "main": "core/main.js"
    },
    "directories": {
      "buildResources": "assets",
      "output": "../../dist"
    },
    "files": [
      "**/*",
      "!node_modules/*",
      {
        "from": "../core",
        "to": "core"
      }
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/icon.icns"
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets/icon.png"
    }
  }
}